{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": false,
    "alwaysStrict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "~/*": ["./client/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["./types", "./client"],
  "exclude": [".idea", ".vscode", ".cache-loader", "public", "**/*.spec.ts"]
}
