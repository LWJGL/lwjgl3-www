  },
  "bugs": {
    "url": "https://github.com/LWJGL/lwjgl3-www/issues"
  },
  "homepage": "https://github.com/LWJGL/lwjgl3-www#readme",
  "nodemonConfig": {
    "ext": "mjs,css",
    "watch": [
      "server/*"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.1.0",
    "fastify": "3.9.2",
    "fastify-accepts": "2.0.1",
    "fastify-etag": "1.0.0",
    "fastify-graceful-shutdown": "3.0.0",
    "fastify-healthcheck": "3.0.0",
    "fastify-helmet": "5.0.3",
    "fastify-http-proxy": "4.1.0",
    "fastify-static": "3.3.0",
    "point-of-view": "4.7.0",
    "pug": "3.0.0"
  },
  "devDependencies": {
    "@adobe/leonardo-contrast-colors": "1.0.0-alpha.8",
    "@aws-sdk/client-cloudfront": "3.1.0",
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.0-beta.0",
    "@prettier/plugin-pug": "1.13.1",
    "@react-aria/button": "3.3.0",
    "@react-aria/dialog": "3.1.2",
    "@react-aria/focus": "3.2.3",
    "@react-aria/interactions": "3.3.2",
    "@react-aria/link": "3.1.2",
    "@react-aria/overlays": "3.6.0",
    "@react-aria/utils": "3.5.0",
    "@react-spring/web": "9.0.0-rc.3",
    "@stitches/react": "0.0.3-canary.4",
    "@types/lodash-es": "4.17.4",
    "@types/react-dom": "17.0.0",
    "@types/react-is": "17.0.0",
    "@types/scheduler": "0.16.1",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "autoprefixer": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-plugin-transform-stitches-display-name": "0.0.1",
    "chalk": "4.1.0",
    "chroma-js": "2.1.0",
    "cli-table": "0.3.4",
    "core-js": "3.8.1",
    "css-loader": "5.0.1",
    "cssnano": "4.1.10",
    "eslint": "7.16.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "fastify-express": "0.3.2",
    "gzip-size": "6.0.0",
    "highlight.js": "10.5.0",
    "history": "5.0.0",
    "immer": "8.0.0",
    "jszip": "3.5.0",
    "lodash-es": "4.17.20",
    "postcss": "8.2.2",
    "postcss-import": "14.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-scss": "3.0.4",
    "prettier": "2.2.1",
    "react": "0.0.0-experimental-3310209d0",
    "react-dom": "0.0.0-experimental-3310209d0",
    "react-fast-compare": "3.2.0",
    "react-is": "0.0.0-experimental-3310209d0",
    "react-refresh": "0.9.0",
    "react-router-dom": "0.0.0-experimental-ffd8c7d0",
    "react-use-gesture": "9.0.0-beta.14",
    "recoil": "0.1.2",
    "rimraf": "3.0.2",
    "scroll-into-view-if-needed": "2.2.26",
    "style-loader": "2.0.0",
    "tiny-async-pool": "1.2.0",
    "typescript": "4.1.3",
    "webpack": "5.11.1",
    "webpack-cli": "4.3.0",
    "webpack-dev-middleware": "4.0.2",
    "webpack-hot-middleware": "2.25.0"
  },
  "scripts": {
    "start": "NODE_ENV=development node server/index.mjs",
    "debug": "NODE_ENV=development node --inspect --preserve-symlinks server/index.mjs",
    "watch": "NODE_ENV=development npx nodemon server/index.mjs",
    "watch-production": "NODE_ENV=production npx nodemon server/index.mjs --test --s3proxy --nocache --pretty",
    "test-production": "NODE_ENV=production node server/index.mjs --test --s3proxy --nocache --pretty",
    "vendor": "NODE_ENV=development node ./scripts/vendor.mjs",
    "production": "rimraf ./public/js/*.js && NODE_ENV=production node ./scripts/build-production.mjs",
    "styles": "NODE_ENV=development node ./scripts/build-styles.mjs",
    "styles-production": "NODE_ENV=production node ./scripts/build-styles.mjs",
    "post-production": "node ./scripts/post-production.mjs",
    "release": "npm run styles-production && npm run production && npm run post-production",
    "deploy": "node ./scripts/deploy.mjs",
    "build": "docker build --rm -t lwjgl/website:latest .",
    "lint": "eslint --ext .ts,.js,.tsx client/",
    "format": "prettier --write \"{client,server,scripts}/**/*.{ts,tsx,js,mjs,md,css,pug}\"",
    "ncu": "npx npm-check-updates -i -x react,react-dom,react-is,react-router-dom",
    "ncut": "npx npm-check-updates -t greatest -x react,react-dom,react-is,react-router-dom",
    "ncun": "npx npm-check-updates -t newest -x react,react-dom,react-is,react-router-dom"
  }
}
